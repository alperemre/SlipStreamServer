<raw-content title="Login">

	<div class="page_head">
		<span class="pageheadtitle">Login to SlipStream&#x2122;</span>
	</div>

	<!-- Username / password -->
	<form id="formlogin" action="%1$s" method="post" enctype="application/x-www-form-urlencoded">

		<div>
			<table class="small">
				<tr>
					<td style="width: 80px"> Username: </td>
					<td>
						<span>
							<input name="username" id="username" type="text" />
						</span>
					</td>
				</tr>
				<tr>
					<td>
					Password:
					</td>
					<td>
				<span>
					<input name="password" id="password" type="password" value="" />
				</span>
					</td>
				</tr>
				<tr>
					<td style="background:white" class="section_head" />
					<td style="background:white" >
						<div class="section_head">
							<input name="login" type="submit" value="Log in" />
						</div>
					</td>
				</tr>
			</table>
		</div>
		
	</form>

	<div style="margin-top: 20px;">
		<span>
			No account? No problem
		</span>
		<form>
			<input type="button" value="Register" onclick="window.location.href='register'" />
		</form>
	</div>

</raw-content>
