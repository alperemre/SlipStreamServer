<raw-content title="Registration">

	<div id="submitMessage" class="ui-overlay hidden">
		<div class="ui-widget-overlay">
		</div>
		<div class="ui-widget-shadow ui-corner-all starting-overlay-shadow" >
		</div>
		<div class="ui-widget ui-widget-content ui-corner-all starting-overlay">
			<div class="ui-dialog-content ui-widget-content center">
				<p/>
				<img src="images/common/spinner.gif" alt="spinner"></img>
				<p>Registering your account. Please wait...</p>
			</div>
		</div>
	</div>

	<form id="formregister" action="register" enctype="application/x-www-form-urlencoded" method="post">

		<div class="page_head">
			<span>SlipStream&#x2122; Registration</span>
			<input type="submit" value="Register" />
		</div>
		
		<div>
			
			<p>Please provide the following information to register for a
				SlipStream&#x2122; account.  After submitting the form, you will be 
				sent an email.  Visit the link in the email to confirm your 
				registration request.</p>

			<table>
	
				<tr>
					<td width="10%">Username</td>
					<td><input name="username" type="text"/>*</td>
				</tr>

				<tr>
					<td>First name</td>
					<td><input name="firstname" type="text" />*</td>
				</tr>

				<tr>
					<td>Last name</td>
					<td><input name="lastname" type="text" />*</td>
				</tr>

				<tr>
					<td>Organization</td>
					<td><input name="organization" type="text" /></td>
				</tr>

				<tr>
					<td>email</td>
					<td><input name="email" type="text" />*</td>
				</tr>
			
				<tr>
					<td>Comments</td>
					<td>
						<input name="comments" type="hidden" />
						<textarea name="comments" cols="40" />
					</td>
				</tr>

			</table>

			<p>
				<input type="checkbox" name="agreement"/> I have read 
				and agree to the SlipStream&#x2122; 
				<a href="html/terms-of-service.html">Terms of Service</a>.
			</p>

		</div>

	</form>
	
	<script language="javascript" type="text/javascript" src="js/register.js" />

</raw-content>
