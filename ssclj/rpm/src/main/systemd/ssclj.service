[Unit]
Description=SlipStream API
After=syslog.target
After=network.target

[Service]
Environment=SSCLJ_PORT=8201
EnvironmentFile=-/etc/default/ssclj

User=slipstream

WorkingDirectory=/opt/slipstream/ssclj

ExecStart=/usr/bin/java \
            -Dconfig.path=db.spec \
            -Dlogfile.path=production \
            -cp "lib/ssclj.jar:resources:lib/ext/*" \
            com.sixsq.slipstream.ssclj.app.main $SSCLJ_PORT
ExecStop=/bin/kill -TERM $MAINPID

[Install]
WantedBy=multi-user.target
