<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>SlipStreamCljResources-jar</artifactId>
  <name>SlipStreamCljResources-jar</name>
  <description>SlipStream Clojure Resources (JAR)</description>

  <packaging>jar</packaging>

  <parent>
    <groupId>com.sixsq.slipstream</groupId>
    <artifactId>SlipStreamCljResources</artifactId>
    <version>2.8-SNAPSHOT</version>
  </parent>

  <repositories>

    <repository>
      <id>maven-restlet</id>
      <name>Public online Restlet repository</name>
      <url>http://maven.restlet.org</url>
    </repository>

    <repository>
      <id>clojars</id>
      <url>http://clojars.org/repo/</url>
    </repository>

  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>clojure</artifactId>
    </dependency>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>tools.logging</artifactId>
    </dependency>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>tools.namespace</artifactId>
    </dependency>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>data.json</artifactId>
    </dependency>
    <dependency>
      <groupId>prismatic</groupId>
      <artifactId>schema</artifactId>
    </dependency>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>java.classpath</artifactId>
    </dependency>
    <dependency>
      <groupId>http-kit</groupId>
      <artifactId>http-kit</artifactId>
    </dependency>
    <dependency>
      <groupId>clojurewerkz</groupId>
      <artifactId>scrypt</artifactId>
    </dependency>
    <dependency>
      <groupId>ring</groupId>
      <artifactId>ring-core</artifactId>
    </dependency>
    <dependency>
      <groupId>ring</groupId>
      <artifactId>ring-json</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>
    <dependency>
      <groupId>compojure</groupId>
      <artifactId>compojure</artifactId>
    </dependency>
    <dependency>
      <groupId>clj-time</groupId>
      <artifactId>clj-time</artifactId>
    </dependency>
    <dependency>
      <groupId>clj-stacktrace</groupId>
      <artifactId>clj-stacktrace</artifactId>
    </dependency>
    <dependency>
      <groupId>metrics-clojure</groupId>
      <artifactId>metrics-clojure</artifactId>
    </dependency>
    <dependency>
      <groupId>metrics-clojure-ring</groupId>
      <artifactId>metrics-clojure-ring</artifactId>
    </dependency>
    <dependency>
      <groupId>metrics-clojure-jvm</groupId>
      <artifactId>metrics-clojure-jvm</artifactId>
    </dependency>
    <dependency>
      <groupId>fs</groupId>
      <artifactId>fs</artifactId>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
    </dependency>
    <dependency>
      <groupId>environ</groupId>
      <artifactId>environ</artifactId>
    </dependency>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>java.jdbc</artifactId>
    </dependency>
    <dependency>
      <groupId>korma</groupId>
      <artifactId>korma</artifactId>
    </dependency>
    <dependency>
      <groupId>org.hsqldb</groupId>
      <artifactId>hsqldb</artifactId>
    </dependency>
    <dependency>
      <groupId>org.xerial</groupId>
      <artifactId>sqlite-jdbc</artifactId>
    </dependency>
    <dependency>
      <groupId>org.clojure</groupId>
      <artifactId>tools.nrepl</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.clojure</groupId>
          <artifactId>clojure</artifactId>
        </exclusion>
      </exclusions>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>clojure-complete</groupId>
      <artifactId>clojure-complete</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.clojure</groupId>
          <artifactId>clojure</artifactId>
        </exclusion>
      </exclusions>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>reply</groupId>
      <artifactId>reply</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>peridot</groupId>
      <artifactId>peridot</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>expectations</groupId>
      <artifactId>expectations</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <profiles>

    <profile>
      <id>full-compile</id>
      <activation>
        <property>
          <name>!skipTests</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.theoryinpractise</groupId>
            <artifactId>clojure-maven-plugin</artifactId>
            
            <executions>
              <execution>
                <id>syntax-check-source</id>
                <goals>
                  <goal>compile</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <warnOnReflection>true</warnOnReflection>
                  <temporaryOutputDirectory>true</temporaryOutputDirectory>
                  <runWithTests>true</runWithTests>
                  <sourceDirectories>
                    <sourceDirectory>src/main/clojure</sourceDirectory>
                  </sourceDirectories>
                  <testSourceDirectories>
                    <sourceDirectory>src/test/clojure</sourceDirectory>
                  </testSourceDirectories>
                </configuration>
              </execution>

              <execution>
                <id>clojure-tests</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <phase>test</phase>
              </execution>

            </executions>
            
          </plugin>
          
        </plugins>
      </build>
    </profile>

  </profiles>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <additionalClasspathElements>
            <additionalClasspathElement>${basedir}/src/main/clojure</additionalClasspathElement>
            <additionalClasspathElement>${basedir}/src/test/clojure</additionalClasspathElement>
          </additionalClasspathElements>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.sixsq.slipstream.ssclj.app.main</mainClass>
            </manifest>
          </archive>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
        </configuration>
        <executions>
          <execution>
            <id>make-jar-with-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.theoryinpractise</groupId>
        <artifactId>clojure-maven-plugin</artifactId>
        
        <executions>
          
          <execution>
            <id>minimal-compile</id>
            <goals>
              <goal>compile</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <namespaces>
                <namespace>com.sixsq.slipstream.ssclj.app.main</namespace>
                <namespace>com.sixsq.slipstream.ssclj.api.acl</namespace>
                <namespace>com.sixsq.slipstream.ssclj.api.korma-helper</namespace>
                <namespace>com.sixsq.slipstream.ssclj.usage.record-keeper</namespace>
                <namespace>com.sixsq.slipstream.ssclj.usage.summary</namespace>
                <namespace>com.sixsq.slipstream.ssclj.usage.launcher</namespace>
              </namespaces>
              <compileDeclaredNamespaceOnly>true</compileDeclaredNamespaceOnly>
            </configuration>
          </execution>
          
        </executions>
        
      </plugin>

    </plugins>
  </build>

</project>
